@model StarTickets.Models.ViewModels.PaymentCancelViewModel
@{
    ViewData["Title"] = "Payment Cancelled";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Cancellation Header -->
            <div class="text-center mb-4">
                <div class="cancel-icon mb-3">
                    <i class="fas fa-times-circle text-warning" style="font-size: 4rem;"></i>
                </div>
                <h2 class="text-warning">Payment Cancelled</h2>
                <p class="lead text-muted">@Model.Message</p>
            </div>

            <!-- Booking Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Booking Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Booking Details</h6>
                            <ul class="list-unstyled">
                                <li><strong>Booking Reference:</strong> @Model.Booking.BookingReference</li>
                                <li><strong>Event:</strong> @Model.Event.EventName</li>
                                <li><strong>Date:</strong> @Model.Event.EventDate.ToString("MMMM dd, yyyy")</li>
                                <li><strong>Time:</strong> @Model.Event.EventDate.ToString("h:mm tt")</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Payment Status</h6>
                            <ul class="list-unstyled">
                                <li><strong>Status:</strong> <span class="badge bg-warning">Payment Pending</span></li>
                                <li><strong>Amount:</strong> $@Model.Booking.FinalAmount.ToString("F2")</li>
                                <li><strong>Booking Date:</strong> @Model.Booking.CreatedAt.ToString("MMMM dd, yyyy")</li>
                                <li><strong>Expires:</strong> 24 hours from booking</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event Details Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Event Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="text-primary">@Model.Event.EventName</h5>
                            <p class="text-muted">@Model.Event.Description</p>
                            
                            <div class="event-details">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="mb-2">
                                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                                            <strong>Date:</strong> @Model.Event.EventDate.ToString("dddd, MMMM dd, yyyy")
                                        </p>
                                        <p class="mb-2">
                                            <i class="fas fa-clock text-primary me-2"></i>
                                            <strong>Time:</strong> @Model.Event.EventDate.ToString("h:mm tt")
                                        </p>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="mb-2">
                                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                            <strong>Venue:</strong> @Model.Event.Venue?.VenueName
                                        </p>
                                        <p class="mb-2">
                                            <i class="fas fa-tag text-primary me-2"></i>
                                            <strong>Category:</strong> @Model.Event.Category?.CategoryName
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.Event.ImageUrl))
                            {
                                <img src="@Model.Event.ImageUrl" alt="@Model.Event.EventName" 
                                     class="img-fluid rounded shadow-sm">
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Important Notice -->
            <div class="alert alert-warning">
                <h6><i class="fas fa-exclamation-triangle me-2"></i>Important Notice</h6>
                <ul class="mb-0">
                    <li>Your booking is still reserved but payment is pending</li>
                    <li>You have 24 hours to complete your payment</li>
                    <li>After 24 hours, your booking will be automatically cancelled</li>
                    <li>Tickets will be released back to general sale</li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="text-center">
                <a href="@Url.Action("Checkout", "Payment", new { bookingId = Model.Booking.BookingId })" 
                   class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-credit-card me-2"></i>
                    Try Payment Again
                </a>
                <a href="@Url.Action("BookTicket", "Booking", new { eventId = Model.Event.EventId })" 
                   class="btn btn-outline-primary btn-lg me-3">
                    <i class="fas fa-edit me-2"></i>
                    Modify Booking
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-home me-2"></i>
                    Back to Home
                </a>
            </div>

            <!-- Support Information -->
            <div class="alert alert-light mt-4">
                <h6><i class="fas fa-headset me-2"></i>Need Help?</h6>
                <p class="mb-0">
                    If you're experiencing payment issues or need assistance, 
                    please contact our support team at 
                    <a href="mailto:support@startickets.com">support@startickets.com</a> 
                    or call us at <strong>(555) 123-4567</strong>.
                </p>
            </div>

            <!-- Common Payment Issues -->
            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-question-circle me-2"></i>
                        Common Payment Issues
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Payment Declined</h6>
                            <ul class="list-unstyled small">
                                <li>• Check your card details</li>
                                <li>• Ensure sufficient funds</li>
                                <li>• Contact your bank</li>
                                <li>• Try a different card</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Technical Issues</h6>
                            <ul class="list-unstyled small">
                                <li>• Clear browser cache</li>
                                <li>• Disable ad blockers</li>
                                <li>• Try a different browser</li>
                                <li>• Check internet connection</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cancel-icon {
        animation: shake 0.5s ease-in-out;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    .event-details {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.375rem;
        border-left: 4px solid #0d6efd;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .alert-warning {
        border-left: 4px solid #ffc107;
    }
</style>