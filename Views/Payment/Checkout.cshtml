@model StarTickets.Models.ViewModels.PaymentViewModel
@{
    ViewData["Title"] = "Complete Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>
                        Complete Your Payment
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Booking Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-primary">Event Details</h5>
                            <div class="event-info">
                                <h6 class="fw-bold">@Model.Event.EventName</h6>
                                <p class="mb-1">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    @Model.Event.EventDate.ToString("dddd, MMMM dd, yyyy")
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-clock me-2"></i>
                                    @Model.Event.EventDate.ToString("h:mm tt")
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    @Model.Event.Venue?.VenueName
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Booking Summary</h5>
                            <div class="booking-summary">
                                <p class="mb-1">
                                    <strong>Booking Reference:</strong> @Model.Booking.BookingReference
                                </p>
                                <p class="mb-1">
                                    <strong>Total Amount:</strong> $@Model.TotalAmount.ToString("F2")
                                </p>
                                @if (Model.Booking.DiscountAmount > 0)
                                {
                                    <p class="mb-1 text-success">
                                        <strong>Discount Applied:</strong> -$@Model.Booking.DiscountAmount.ToString("F2")
                                    </p>
                                }
                                <hr>
                                <h6 class="text-primary">
                                    <strong>Final Amount: $@Model.Booking.FinalAmount.ToString("F2")</strong>
                                </h6>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Options -->
                    <div class="payment-options">
                        <h5 class="text-primary mb-3">Choose Payment Method</h5>
                        
                        <!-- Stripe Checkout Button -->
                        <div class="d-grid gap-2">
                            <button id="stripe-checkout-btn" class="btn btn-primary btn-lg">
                                <i class="fab fa-stripe me-2"></i>
                                Pay with Stripe - $@Model.Booking.FinalAmount.ToString("F2")
                            </button>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Your payment is secure and encrypted. We accept all major credit cards.
                            </small>
                        </div>
                    </div>

                    <!-- Security Notice -->
                    <div class="alert alert-info mt-4">
                        <h6><i class="fas fa-info-circle me-2"></i>Security Notice</h6>
                        <ul class="mb-0">
                            <li>Your payment information is processed securely by Stripe</li>
                            <li>We never store your credit card details</li>
                            <li>All transactions are encrypted and PCI compliant</li>
                            <li>You will receive a confirmation email after successful payment</li>
                        </ul>
                    </div>

                    <!-- Back to Booking -->
                    <div class="mt-4">
                        <a href="@Url.Action("BookTicket", "Booking", new { eventId = Model.Event.EventId })" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Booking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const stripe = Stripe('@Model.StripePublishableKey');
            const checkoutButton = document.getElementById('stripe-checkout-btn');

            checkoutButton.addEventListener('click', function() {
                // Show loading state
                checkoutButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                checkoutButton.disabled = true;

                // Redirect to Stripe Checkout
                window.location.href = '@Model.CheckoutUrl';
            });
        });
    </script>
}

<style>
    .event-info, .booking-summary {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.375rem;
        border-left: 4px solid #0d6efd;
    }

    .payment-options {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.375rem;
        border: 1px solid #dee2e6;
    }

    #stripe-checkout-btn {
        background: linear-gradient(45deg, #635bff, #00d4aa);
        border: none;
        transition: all 0.3s ease;
    }

    #stripe-checkout-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 91, 255, 0.3);
    }

    .alert {
        border-left: 4px solid #0dcaf0;
    }
</style>